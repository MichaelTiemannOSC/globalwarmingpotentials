{
  "name": "globalwarmingpotentials",
  "title": "Global warming potentials of greenhouse gases",
  "version": "0.1.0",
  "description": "Global warming potentials of greenhouse gases from various IPCC reports",
  "repository": "git://github.com/openclimatedata/globalwarmingpotentials.git",
  "resources": [
    {
      "path": "globalwarmingpotentials.csv",
      "format": "csv",
      "mediatype": "text/csv",
      "schema": {
        "fields": [
          {
            "name": "Species",
            "type": "string",
            "description": "Greenhouse gas name"
          },
          {
            "name": "SARGWP100",
            "type": "number",
            "description": "Second Assessment Report 100-year GWP"
          },
          {
            "name": "AR4GWP100",
            "type": "number",
            "description": "Fourth Assessment Report 100-year GWP"
          },
          {
            "name": "AR5GWP100",
            "type": "number",
            "description": "Fourth Assessment Report 100-year GWP"
          }
        ]
      }
    }
  ]
}
